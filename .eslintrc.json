{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "error",
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "no-undef": "off",
        "no-var": "error",
        "object-shorthand": ["error", "properties"],
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "semi": "error"
    },
    "overrides": [
        {
            "files": ["**/dist/*"],
            "excludedFiles": "**/*.js"
        }
    ]
}
